{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noEmit": false,
        "outDir": "./dist"
    },
    "include": [
        "server.ts",
        "src/server/**/*",
        "src/game/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}